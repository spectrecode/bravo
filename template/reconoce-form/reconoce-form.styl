.ReconoceForm
	.container
		background blanco
		.box-access
			align-items stretch
			display flex
			flex-direction row
			flex-wrap no-wrap
			justify-content flex-start
			padding 0 !important
			margin-bottom 0 !important
			.inner-left
				background blanco
				padding 100px 40px 20px
				margin 0
				text-align center
				hgroup
					padding-top 20px
					padding-bottom 30px
					h3, h4
						color rojo
						font-size 16px
			.inner-form
				padding-top 40px
				padding-right 10px
				padding-bottom 30px
				.box-title
					text-align center
					margin-bottom 30px
					h2
						color gris-claro
						font-size 20px
						font-family robotobold
				form
					.form-group
						margin-left auto
						margin-right auto
						text-align center
						input[type="text"], textarea
							border 1px solid gris-claro
							padding-top 10px
							padding-bottom 10px
							display block
							width 300px
							&:focus
								outline 0px
						textarea
							border-radius 10px
							font-size 12px
							padding-left 20px
							height 60px
							width 295px
							&:-webkit-autofill
								-webkit-text-fill-color negro
								-webkit-box-shadow 0 0 0px 1000px blanco inset
						a
							background gris
							display block
							padding 8px 8px
							font-size 14px
							text-decoration none
							&:hover
								background rojo
							