.menu
	background-color azul
	.contenedorMenu
		align-items flex-start
		display flex
		flex-direction row
		flex-wrap no-wrap
		justify-content flex-start
		margin 0
		padding 0
		position relative
		list-style none
		li
			width 100%
			@media screen and (min-width: 992px)
				width auto
			a
				background-color transparent
				display inline-block
				line-height 4em
				text-decoration none
				transition all 0.25s linear
				padding-left 10px
				padding-right 10px
				font-size 12px
				.icon-arrows
					color blanco
					font-size 8px
					margin-left 8px					
				&:hover, &.active
					color naranja
					.icon-arrows
						color naranja
			&:hover
				.submenu					
					animation mostarSubmenu 0.5s 
					animation-fill-mode forwards
					display block
			.submenu				
				background-color turqueza
				display none
				opacity 0	
				position absolute
				top 100%
				overflow hidden
				z-index 3
				ul
					align-items flex-start
					display flex
					flex-direction column
					flex-wrap no-wrap
					justify-content flex-start
					margin 0
					padding 0
					list-style none
					li
						padding 0
						a 
							border-left 0
							border-bottom 1px dotted azul
							color blanco
							padding-left 10px
							padding-right 80px
							width 100%
							&:hover
								background-color turquezaclaro
@keyframes mostarSubmenu
	0% 
		opacity 0
	100%
		opacity 1
		