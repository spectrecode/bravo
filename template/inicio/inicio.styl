	.inner-content
		align-items center
		flex-direction column
		justify-content center
		height 100%
	.box
		&.box-image
			position relative
		margin-left auto
		margin-right auto
		text-align center
		&.box-title
			h2
				font-size 30px
			h1
				font-size 35px
		&.box-login
			.form-group			
				input[type="text"], input[type="password"]
					width 187px
				button,input[type="password"]
					display inline-block
					vertical-align middle
				p
					font-size 12px
					a
						color rojo
						font-size 12px
						text-decoration none
						&:hover
							text-decoration underline