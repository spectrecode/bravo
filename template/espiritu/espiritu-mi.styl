.Espiritu
	.container
		background blanco
		.box-access
			align-items stretch
			display flex
			flex-direction row
			flex-wrap no-wrap
			justify-content flex-start
			padding 0 !important
			margin-bottom 0 !important
			.inner-searchpeople
				background gris-claro2
				padding 80px 10px 20px
				margin 0
				text-align center
				hgroup
					padding-top 20px
					padding-bottom 30px
					h3, h4
						color rojo
						font-size 16px
					h4
						padding-top 20px
						font-size 14px
				form
					margin 0 auto 20px
					text-align center
					input[type="text"]
						border-radius 0
						display block
						margin auto
						width 150px
				a
					border-radius 10px
					background gris
					color blanco
					padding 10px
					font-size 12px
					line-height 2em
					text-decoration none
		.inner-comment
			padding-top 15px
			padding-left 15px
			padding-right 20px
			.inner-user
				margin-bottom 20px
				.header
					h2, a, span
						color rojo
						display inline-block
						font-size 16px
						font-family open_sansbold
						vertical-align middle
					a
						margin 0 5px
				.comment
					border-bottom 1px solid gris-claro2
					padding-bottom 10px
					
					